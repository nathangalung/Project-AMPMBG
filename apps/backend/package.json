{
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "bun --env-file=.env.development run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "test": "bun --env-file=.env.development test",
    "test:watch": "bun --env-file=.env.development test --watch",
    "test:coverage": "bun --env-file=.env.development test --coverage",
    "db:generate": "bun --env-file=.env.development drizzle-kit generate",
    "db:migrate": "bun --env-file=.env.development drizzle-kit migrate",
    "db:push": "bun --env-file=.env.development drizzle-kit push",
    "db:studio": "bun --env-file=.env.development drizzle-kit studio",
    "db:seed": "bun --env-file=.env.development run src/db/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.995.0",
    "@hono/zod-validator": "^0.7.6",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.12.2",
    "jose": "^6.1.3",
    "nodemailer": "^8.0.1",
    "postgres": "^3.4.8",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/nodemailer": "^7.0.11",
    "drizzle-kit": "^0.31.9"
  }
}
