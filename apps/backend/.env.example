# AMP MBG Backend Environment Example
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://ampmbg:ampmbg_dev_password@localhost:5432/ampmbg_dev

# JWT
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS (public + admin frontends)
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# Storage: local | supabase | r2
STORAGE_TYPE=local
LOCAL_UPLOAD_DIR=./uploads

# Cloud storage (optional)
# S3_ENDPOINT=
# S3_BUCKET=
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=
# S3_REGION=auto
# S3_PUBLIC_URL=

# SMTP (Stalwart mail server)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_FROM=noreply@lapormbg.com
# SMTP_USER=
# SMTP_PASS=
