{
  "name": "amp-mbg",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": ["apps/*"],
  "scripts": {
    "dev": "concurrently -n public,admin,be -c blue,cyan,green \"bun run dev:public\" \"bun run dev:admin\" \"bun run dev:be\"",
    "dev:public": "bun --cwd apps/frontend-public dev",
    "dev:admin": "bun --cwd apps/frontend-admin dev",
    "dev:be": "bun --cwd apps/backend dev",
    "build": "bun run build:public && bun run build:admin && bun run build:be",
    "build:public": "bun --cwd apps/frontend-public build",
    "build:admin": "bun --cwd apps/frontend-admin build",
    "build:be": "bun --cwd apps/backend build",
    "db:push": "bun --cwd apps/backend db:push",
    "db:seed": "bun --cwd apps/backend db:seed",
    "db:studio": "bun --cwd apps/backend db:studio",
    "lint": "bun --filter '*' lint",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/dist"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/bun": "^1.3.9",
    "concurrently": "^9.2.1",
    "eslint": "^10.0.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.2",
    "globals": "^17.3.0",
    "typescript-eslint": "^8.56.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
